<div class="row">
  <h1>
    Looking for {{model.name}}
  </h1>

  {{#each recipe in model}}
    <div class="col-sm-6">
      <div class="card">
        <img class="card-img-top" src="{{recipe.image}}" alt="Card image cap">
        <div class="card-block">
          <p class="card-text">{{recipe.label}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
